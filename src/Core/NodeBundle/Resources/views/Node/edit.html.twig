{% extends '@Core/main.html.twig' %}

{% block content -%}
    <div class="row" style="margin-top: 10px">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('node_manager') }}">Контент</a></li>
                <li class="active">Редактирование</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <h1>Node edit</h1>

            {{ form_start(edit_form) }}
            <div class="form-group {% if form_errors(edit_form.category) %}has-error{% endif %}">
                <label for="">Категория</label>
                {{ form_widget(edit_form.category, {'attr': {'class': 'form-control'}}) }}
                {% if form_errors(edit_form.category) %}
                    <p class="help-block text-danger">
                        {{ form_errors(edit_form.category) }}
                    </p>
                {% endif %}
            </div>

            <div class="form-group {% if form_errors(edit_form.title) %}has-error{% endif %}">
                <label for="">Заголовок</label>
                {{ form_widget(edit_form.title, {'attr': {'class': 'form-control'}}) }}
                {% if form_errors(edit_form.title) %}
                    <p class="help-block text-danger">
                        {{ form_errors(edit_form.title) }}
                    </p>
                {% endif %}
            </div>

            <div class="form-group {% if form_errors(edit_form.short_main) %}has-error{% endif %}">
                <label for="">Анотация</label>
                {{ form_widget(edit_form.short_main, {'attr': {'class': 'form-control'}}) }}
                {% if form_errors(edit_form.short_main) %}
                    <p class="help-block text-danger">
                        {{ form_errors(edit_form.short_main) }}
                    </p>
                {% endif %}
            </div>

            <div class="form-group {% if form_errors(edit_form.main) %}has-error{% endif %}">
                <label for="">Содержание</label>
                {{ form_widget(edit_form.main) }}
                {% if form_errors(edit_form.main) %}
                    <p class="help-block text-danger">
                        {{ form_errors(edit_form.main) }}
                    </p>
                {% endif %}
            </div>

            {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_end(edit_form) }}
        </div>
        <div class="col-lg-6">
                {{ render(controller('NodeBundle:Gallery:form')) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/node/js/gallery.js') }}"></script>
{% endblock %}

