<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Отзыв о услуге</h4>
</div>
<form id="closeOrderForm" action="{{ path('ad_order_finish', {'id': order.id}) }}" method="post">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 text-center">

                <div class="row">
                    <div class="col-lg-12 status">

                    </div>
                </div>

                <div style="margin: 30px auto;">
                    <input name="rating" type="hidden" class="rating" data-filled="glyphicon glyphicon-star custom-star" data-empty="glyphicon glyphicon-star custom-star-empty" />
                </div>
                <div class="form-group">
                    <label>
                        Комментарий
                    </label>
                    <textarea class="form-control" name="comment"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn default" data-dismiss="modal">Отмена</button>
        <button type="submit" class="btn blue" href="{{ path('ad_order_finish', {'id': order.id}) }}?adopt=true">Отправить</button>
    </div>
</form>

<script>
    $('input.rating').rating();

    $('#closeOrderForm').ajaxForm({
        dataType: 'json',
        success: function (data) {
            if (data.status && data.message) {
                $('#closeOrderForm .status').html('<div class="alert alert-' + data.status + '">' + data.message + '</div>');
            }
        }
    });
</script>